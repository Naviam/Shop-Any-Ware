@using TdService.Resources.Views
<div data-bind="with: popupPackageSizeViewModel">
    <div class="modal" data-bind="attr: { id: popupDomId }" style="display: none">
        <div class="modal-header">
            <button class="close" data-dismiss="modal">×</button>
            <h3>@DashboardViewResources.EditPackageSizePopupTitle</h3>
        </div>
        <div class="modal-body">
            <form class="form-horizontal">
                <fieldset class="well the-fieldset">
                    <legend class="the-legend">@DashboardViewResources.SizeLegend</legend>
                    <div class="control-group">
                        <label class="control-label" for="itemWeight">@DashboardViewResources.PackageWeightHeader</label>
                        <div class="controls">
                            <input class="input-small focused" data-bind="value: weight" id="packageWeight" type="text" />&nbsp @DashboardViewResources.PoundsShort
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="itemHeight">@DashboardViewResources.PackageHeightHeader</label>
                        <div class="controls">
                            <input class="input-small focused" id="packageHeight" data-bind="value: dimHeight" type="text" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="itemWidth">@DashboardViewResources.PackageWidthHeader</label>
                        <div class="controls">
                            <input class="input-small focused" id="packageWidth" type="text" data-bind="value: dimWidth" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="itemLength">@DashboardViewResources.PackageLengthHeader</label>
                        <div class="controls">
                            <input class="input-small focused" id="packageLength" type="text" data-bind="value: dimLength" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="itemGirth">@DashboardViewResources.PackageGirthHeader</label>
                        <div class="controls">
                            <input class="input-small focused" id="packageGirth" type="text" data-bind="value: dimGirth" />
                        </div>
                    </div>
                </fieldset>
                <div class="modalValidationErrors" data-bind="foreach:validationModel.errors, visible:errorsVisible">
                    <div data-bind="text:$data"></div>
                </div>
                <div class="modalValidationErrors" data-bind="foreach:brokenRules, visible:errorsVisible">
                    <div data-bind="text:$data"></div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">@DashboardViewResources.CancelButton</a>
            <a href="#" class="btn btn-primary" data-bind="click: savePackageSize">@DashboardViewResources.SaveChangesButton</a>
        </div>
    </div>
</div>
