<form class="form-horizontal">
    <fieldset>
        <summary></summary>
        <div class="control-group">
            <label class="control-label" for="paymentmethod">Payment method: </label>
            <div class="controls">
                <select class="input-xlarge" id="paymentmethod">
                    <option>Paypal</option>
                    <option>Credit Card (Visa, Mastercard, AE)</option>
                </select>
                <p class="help-block">Please choose a payment method.</p>
            </div>
            <label class="control-label" for="amount">Amount: </label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="amount"/>
                <p class="help-block">Please specify amount you want to add to your account.</p>
            </div>
        </div>
    </fieldset>
</form>