@using TdService.Resources.Views
<div id="balancePopupContent" style="display: none">
    <div data-bind='visible: transactions().length == 0'>
        <div class='alert alert-info'>
            <span>На данный момент у Вас отсутствует история транзакций</span>
        </div>
    </div>
    <table data-bind='visible: transactions().length > 0' class='table table-striped table-condensed'>
        <thead>
            <tr>
                <th style='width: 100px'>@DashboardViewResources.TransactionsDate</th>
                <th style='width: 300px'>@DashboardViewResources.TransactionsType</th>
                <th style='width: 100px'>@DashboardViewResources.TransactionsStatus</th>
                <th style='width: 100px'>@DashboardViewResources.TransactionsAmount</th>
            </tr>
        </thead>
        <tbody data-bind='foreach: transactions()'>
            <tr>
                <td data-bind='text: transactionDate'></td>
                <td>Deposit</td>
                <td><span class='label label-warning' data-bind='text:transactionStatus'></span></td>
                <td data-bind='text: operationAmount'></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td>Баланс: </td>
                <td data-bind='text: balance'></td>
            </tr>
        </tfoot>
    </table>
    <form class="input-prepend input-append" action="/ballance/AddTransaction" method="post" target="_self">
        <span class="add-on">$</span>
        <input class="span2" id="prependedInput" type="text">
        <input type="submit" class='btn btn-primary' value="Add Funds" />
    </form>
</div>
