@using TdService.Resources.Views
<script type="text/html" id="balancePopupContent">
<div data-bind='visible: transactions().length == 0'>
    <div class='alert alert-info'>
        <span>На данный момент у Вас отсутствует история транзакций</span>
    </div>
    <br />
</div>
<table data-bind='visible: transactions().length > 0' class='table table-striped table-condensed'>
    <thead>
        <tr>
            <th style='width: 100px'>@DashboardViewResources.TransactionsDate</th>
            <th style='width: 300px'>@DashboardViewResources.TransactionsType</th>
            <th style='width: 100px'>@DashboardViewResources.TransactionsStatus</th>
            <th style='width: 100px'>@DashboardViewResources.TransactionsAmount</th>
        </tr>
    </thead>
    <tbody data-bind='foreach: transactions'>
        <tr>
            <td></td>
            <td></td>
            <td><span class='label label-warning'>Pending</span></td>
            <td><span data-bind='text: operationAmount'></span></td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td>Баланс: </td>
            <td>73.00</td>
        </tr>
    </tfoot>
</table>
<form class='form-inline'>
    <div class='input-prepend'>
        <span class='add-on'>$</span><input data-bind='value: amountToAdd' type='text' class='span1' placeholder='0.00'/>
    </div>
    <input type='button' data-bind='click: addFunds' class='btn btn-primary' value='Add Funds' />
</form>
</script>