        <form class="form-horizontal">
            <fieldset>
                <div class="control-group">
                    <h2>Add A New Delivery Address</h2>
                </div>
                <div class="control-group">
                    <label class="control-label">First Name</label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" placeholder="Please enter your first name" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Last Name:</label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" placeholder="Please enter your last name" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Country:</label>
                    <div class="controls">
                        <select class="input-xlarge" id="country">
                            <option>Belarus</option>
                            <option>Russia</option>
                            <option>Ukraine</option>
                        </select>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Region:</label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" placeholder="Please enter your region" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">City:</label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" placeholder="Please enter your city" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Address 1:</label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" placeholder="Please enter your street" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Address 2:</label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" placeholder="Please enter your home address and suite number" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Zip Code:</label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" placeholder="Please enter your zip code" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Phone Number:</label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" placeholder="Please enter your phone number" />
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Add Address</button>
                </div>
            </fieldset>
        </form>
