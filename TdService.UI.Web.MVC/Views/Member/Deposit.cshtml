@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnDeposit").click(function () {
                $.post("/deposit/RedirectToPayPal", { "amount": $("#tbAmount").val()}, function (data) {
                    var items = ko.toJS(data);
                    window.location = data;
                });
            });
        });
    </script>
}