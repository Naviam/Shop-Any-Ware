@model TdService.Services.ViewModels.Account.ForgotPasswordView
@using TdService.Resources.Views;
@{
    ViewBag.Title = ForgotViewResources.PageTitle;
}

@using(Html.BeginForm("Forgot", "Account", new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken("forgot")
    <fieldset>
        <div class="control-group">
            <h2>@ForgotViewResources.PageHeader</h2>
        </div>
        <div class="control-group">
            <label class="control-label">Email</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Email, new { @class = "input-xlarge", @data-bind = "value: email" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-large">Reset Password</button>
            </div>
        </div>
    </fieldset>
}

<form class="form-horizontal" method="POST">
    <fieldset>
        <div class="control-group">
            <h2>Forgot Password?</h2>
        </div>
        <div class="control-group">
            <label class="control-label">Email</label>
            <div class="controls">
                <input name="Email" class="input-xlarge" type="text" data-val="true" 
                       data-bind="value: email" 
                       data-val-length-max="256">
                <span class="field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary btn-large">Reset Password</button>
        </div>
    </fieldset>
</form>