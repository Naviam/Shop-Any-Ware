@model TdService.Services.ViewModels.Account.SignUpView

@{
    ViewBag.Title = "Shop Any Ware - Registration";
}

<form class="form-horizontal" action="@Url.Action("SignUp", "Account")" method="POST">
    <fieldset>
        <div class="control-group">
            <h2>Register and Get Your USA Address</h2>
        </div>
        <div class="control-group error">
            <label class="control-label">Email:</label>
            <div class="controls">
                <input class="input-xlarge" type="text" value="email address here">
                <span class="help-inline">Please correct the error</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Password:</label>
            <div class="controls">
                <input class="input-xlarge" type="password" value="password">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Confirm Password:</label>
            <div class="controls">
                <input class="input-xlarge" type="password" value="password">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">First Name:</label>
            <div class="controls">
                <input class="input-xlarge" type="text" value="">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Last Name:</label>
            <div class="controls">
                <input class="input-xlarge" type="text" value="">
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary btn-large">Start Shopping!</button>
        </div>
    </fieldset>
</form>