<form class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="firstname">First Name: </label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="firstname" placeholder="Please enter your first name"/>
            </div>
            <label class="control-label" for="lastname">Last Name: </label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="lastname" placeholder="Please enter your last name"/>
            </div>
            <label class="control-label" for="country">Country: </label>
            <div class="controls">
                <select class="input-xlarge" id="country">
                    <option>Belarus</option>
                    <option>Russia</option>
                    <option>Ukraine</option>
                </select>
                <p class="help-block">Please choose country.</p>
            </div>
            <label class="control-label" for="region">Region: </label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="region" placeholder="Please enter your region"/>
            </div>
            <label class="control-label" for="city">City: </label>
            <div class="controls">
                <textarea class="input-xlarge" id="city" placeholder="Please enter your city"></textarea>
            </div>
            <label class="control-label" for="address1">Address 1: </label>
            <div class="controls">
                <textarea class="input-xlarge" id="address1" placeholder="Please enter your street"></textarea>
            </div>
            <label class="control-label" for="address2">Address 2: </label>
            <div class="controls">
                <textarea class="input-xlarge" id="address2" placeholder="Please enter your home address and suite number."></textarea>
            </div>
            <label class="control-label" for="zip">Zip Code: </label>
            <div class="controls">
                <textarea class="input-xlarge" id="zip" placeholder="Please enter your zip code."></textarea>
            </div>
            <label class="control-label" for="phone">Phone Number: </label>
            <div class="controls">
                <textarea class="input-xlarge" id="phone" placeholder="Please enter your phone number."></textarea>
            </div>
        </div>
    </fieldset>
</form>