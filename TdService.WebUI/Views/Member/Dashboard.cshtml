                    <div class="white">
                        <a href="#" class="btn btn-mini btn-success" data-bind="click: addItem"><i class="icon-white icon-plus-sign"></i> Add Item</a>
                        <form class="form-inline">
                            <fieldset>
                                <input type="text" class="input-mini" id="itemName" placeholder="name" />
                                <input type="text" class="input-mini" id="itemSize" placeholder="size" />
                                <input type="text" class="input-mini" id="itemColor" placeholder="color" />
                                <input type="text" class="input-mini" id="itemQuantity" placeholder="quantity" />
                                <input type="text" class="input-mini" id="itemPrice" placeholder="price" />
                                <div class="controls">
                                    <a href="#" class="btn btn-mini btn-success">Add Item</a>
                                    <a href="#" class="btn btn-mini btn-danger">Discard</a>
                                </div>
                           </fieldset>
                        </form>
                    </div>
                    <div class="white">
                        <table>
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Item Name</th>
                                    <th>Size</th>
                                    <th>Color</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="order_items" data-bind="sortable: {data: items, afterAdd: showItem}">
                                <tr>
                                    <td class="draggable"><div></div></td>
                                    <td class="left"><span data-bind="click: $parent.removeItem, text: name"></span></td>
                                    <td><span data-bind="text: size"></span></td>
                                    <td><span data-bind="text: color"></span></td>
                                    <td><span data-bind="text: quantity"></span></td>
                                    <td><span data-bind="text: price"></span></td>
                                    <td class="draggable"><div></div></td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td class="draggable"><div></div></td>
                                    <td class="left">Total</td>
                                    <td colspan="2"></td>
                                    <td>4</td>
                                    <td data-bind="text: totalAmount"></td>
                                    <td class="draggable"><div></div></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <button class="btn btn-small btn-danger" data-bind="click: $parent.removeOrder"><i class="icon-white icon-trash"></i> REMOVE</button>
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-small" data-toggle="modal"><i class="icon-camera"></i> PHOTO</button>
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-small" data-toggle="modal"><i class="icon-retweet"></i> RETURN</button>
                        </div>
                    </div>
                </div>
                <div>
                    <span class="label label-info">ID: <span data-bind="text: id"></span></span>
                    <span class="label label-info label-photo">Photo: </span><a href="#" class="badge badge-photo">4</a>
                    <span class="label label-info">Status: <span data-bind="text: status"></span></span>
                    <span class="label label-info">Date: <span data-bind="text: receivedDate"></span></span>
                </div>
            </div>
        </div>
    </div>
    <div id="packages" class="span4">
