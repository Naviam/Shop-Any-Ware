<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Le styles -->
    <link href="@Url.Content("~/Content/less/bootstrap.css")" rel="stylesheet">
    <style>
        body
        {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <link href="@Url.Content("~/Content/less/responsive.css")" rel="stylesheet">
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/ico/favicon.ico")">
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/img/bootstrap-apple-57x57.png")">
    <link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/Content/img/bootstrap-apple-72x72.png")">
    <link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/Content/img/bootstrap-apple-114x114.png")">
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="@Url.Action("Index", "Home")">Shop Any Ware</a>
                <div class="nav-collapse">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        @Html.MvcSiteMap("TopMenu").Menu("TopMenuHelperModel", true)
                    }
                    else
                    {
                        @Html.MvcSiteMap("Shopper").Menu("PillsMenuHelperModel", false);
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="nav pull-right">
                            <li id="fat-menu" class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                          Vitali Hatalski <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#"><i class="icon-user"></i> Profile</a></li>
                                    <li><a data-toggle="modal" href="#storeAddress"><i class="icon-home"></i> Store Address in US</a></li>
                                    <li><a href="#"><i class="icon-th-list"></i> Delivery Addresses</a></li>
                                    <li><a href="#"><i class="icon-cog"></i> Account Settings</a></li>
                                    <li class="divider"></li>
                                    <li><a href="@Url.Action("SignOut", "Account")"><i class="icon-off"></i> Sign Out</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <a href="@Url.Action("SignUp", "Account")" class="btn btn-primary" style="margin-top:6px;margin-left: 20px">SIGN UP &raquo;</a>                        
                        <div class="pull-right">
                        <form class="form-inline form-horizontal" style="margin: 2pt 0pt 0px" action="@Url.Action("SignIn", "Account")" method="POST">
                            <input class="input-small" type="text" placeholder="Email"/>
                            <input class="input-small" type="password" placeholder="Password"/>
                            <label class="checkbox"><input type="checkbox"/>Remember?</label>
                            <button class="btn btn-info" type="submit" style="margin-top:6px">SIGN IN &raquo;</button>
                        </form>    
                        </div>
                    }
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container">
        @*<header class="jumbotron subhead" id="overview">
            <div class="subnav">
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.MvcSiteMap("Shopper").Menu("PillsMenuHelperModel", false);
                }
                <ul class="nav nav-pills">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Buttons <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#buttonGroups">Button groups</a></li>
                            <li><a href="#buttonDropdowns">Button dropdowns</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Navigation <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#navs">Nav, tabs, pills</a></li>
                            <li><a href="#navbar">Navbar</a></li>
                            <li><a href="#breadcrumbs">Breadcrumbs</a></li>
                            <li><a href="#pagination">Pagination</a></li>
                        </ul>
                    </li>
                    <li><a href="#labels">Labels</a></li>
                    <li><a href="#typography">Typography</a></li>
                    <li><a href="#thumbnails">Thumbnails</a></li>
                    <li><a href="#alerts">Alerts</a></li>
                    <li><a href="#progress">Progress bars</a></li>
                    <li><a href="#misc">Miscellaneous</a></li>
                </ul>
            </div>
        </header>*@
        @RenderBody()
        <hr>
        <footer>
            <p>&copy; ShowAnyWare.com 2012</p>
        </footer>
    </div>
    <div id="storeAddress" class="modal hide fade">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">×</a>
            <h3>Your Store Address in USA</h3>
        </div>
        <div class="modal-body">
            @{Html.RenderPartial("storeAddress", true);}
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
        </div>
    </div>
    <div id="profile" class="modal hide fade">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">×</a>
            <h3>Edit Your Profile</h3>
        </div>
        <div class="modal-body">
            @{Html.RenderPartial("storeAddress", true);}
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
        </div>
    </div>
    <!-- /container -->
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
    @*<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-transition.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-alert.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-modal.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-dropdown.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-scrollspy.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-tab.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-tooltip.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-popover.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-button.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-collapse.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-carousel.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-typeahead.js")"></script>
    @RenderSection("Scripts", false)
</body>
</html>
