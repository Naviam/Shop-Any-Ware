<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Le styles -->
    <link href="@Url.Content("~/Content/less/bootstrap.css")" rel="stylesheet">
    <style>
        body
        {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    @*<link href="@Url.Content("~/Content/less/responsive.css")" rel="stylesheet">*@
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/ico/favicon.ico")">
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/img/apple-touch-icon.png")">
    <link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/Content/img/apple-touch-icon-72x72.png")">
    <link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/Content/img/apple-touch-icon-114x114.png")">
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="#">Shop Any Ware</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active"><a href="@Url.Action("Home", "Member")">Summary</a></li>
                        <li><a href="@Url.Action("Index", "Order")">Orders</a></li>
                        <li><a href="@Url.Action("Index", "Parcel")">Parcels</a></li>
                        <li><a href="@Url.Action("Index", "Balance")">Balance</a></li>
                        <li><a href="@Url.Action("SignIn", "Account")">Sign In</a></li>
                        <li><a href="@Url.Action("SignUp", "Account")">Register</a></li>
                    </ul>
                    <ul class="nav pull-right">
                        <li id="fat-menu" class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Vitali Hatalski <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="icon-user"></i> Profile</a></li>
                                <li><a data-toggle="modal" href="#storeAddress"><i class="icon-home"></i> Store Address in US</a></li>
                                <li><a href="#"><i class="icon-th-list"></i> Delivery Addresses</a></li>
                                <li><a href="#"><i class="icon-cog"></i> Account Settings</a></li>
                                <li class="divider"></li>
                                <li><a href="@Url.Action("SignOut", "Account")"><i class="icon-off"></i> Sign Out</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <div id="storeAddress" class="modal hide fade">
        <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Your Store Address in USA</h3>
        </div>
        <div class="modal-body">
        <table class="table-bordered table-striped table-condensed">
            <tbody>
                <tr>
                    <td>First Name: </td>
                    <td>Vitali</td>
                </tr>
                <tr>
                    <td>Last Name: </td>
                    <td>Hatalski</td>
                </tr>
                <tr>
                    <td>Address 1: </td>
                    <td>701 Ashland Ave</td>
                </tr>
                <tr>
                    <td>Address 2: </td>
                    <td>BWW-Ltrshop , Ste #20901</td>
                </tr>
                <tr>
                    <td>Zip Code: </td>
                    <td>19032</td>
                </tr>
                <tr>
                    <td>City: </td>
                    <td>Folcroft</td>
                </tr>
                <tr>
                    <td>State: </td>
                    <td>"Pennsylvania" or "PA"</td>
                </tr>
                <tr>
                    <td>Phone: </td>
                    <td>(734)5166594</td>
                </tr>
            </tbody>
        </table>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
        </div>
    </div>
    <!-- /container -->
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
    @*<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-transition.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-alert.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-modal.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-dropdown.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-scrollspy.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-tab.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-tooltip.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-popover.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-button.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-collapse.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-carousel.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-typeahead.js")"></script>
    @RenderSection("Scripts", false)
</body>
</html>
